<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
        <style>
h1.mb-4 {
    text-align: center; 
    font-size: 2.5rem;  
    font-weight: bold; 
    color: #2c3e50;     
    text-transform: uppercase; 
    letter-spacing: 1px; 
    margin-bottom: 30px;
    padding: 20px;       
    background-color: #f1f1f1; 
    border-radius: 10px; 
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); 
}</style>

    {% block stylesheets %}{% endblock %}
</head>

<body>
{% include 'partials/navbar.html.twig' %}


{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Quiz Details</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Title</th>
                    <td>{{ quiz.title }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ quiz.description }}</td>
                </tr>
                <tr>
                    <th>Duration</th>
                    <td>{{ quiz.duration }} minutes</td>
                </tr>
                <tr>
                    <th>Total Score</th>
                    <td>{{ quiz.getTotalscore() }}</td>  
                </tr>
                <tr>
                    <th>Author</th>
                    <td>{{ quiz.author }}</td>
                </tr>
                <tr>
                    <th>Creation Date</th>
                <td>{{ quiz.creationdate ? quiz.creationdate|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <div class="mt-3">
            <a href="{{ path('app_exercice_index', {'quiz_id': quiz.quiz_id}) }}" 
               class="btn btn-info">
                View Exercises ({{ quiz.exercices|length }})
            </a>
            <a href="{{ path('app_quiz_edit', {'quiz_id': quiz.quiz_id}) }}" 
               class="btn btn-warning">
                Edit
            </a>
            <a href="{{ path('app_quiz_index') }}" class="btn btn-secondary">
                Back to list
            </a>
        </div>
    </div>
{% endblock %}