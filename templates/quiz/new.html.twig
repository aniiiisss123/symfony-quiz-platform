<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{{ is_new ? 'New' : 'Edit' }} Quiz{% endblock %}</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
    
    <style>
        .is-invalid {
            border-color: #dc3545 !important;
            box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
        }

        .invalid-feedback {
            display: block;
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 0.25rem;
            font-weight: bold;
        }

        .form-section {
            margin-bottom: 2rem;
            padding: 1.5rem;
            background-color: #f8f9fa;
            border-radius: 0.5rem;
        }
        .section-title {
            color: #4e73df;
            margin-bottom: 1.5rem;
            padding-bottom: 0.5rem;
            border-bottom: 1px solid #dee2e6;
        }
        .quiz-card {
            background: white;
            border-radius: 0.5rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
            padding: 2rem;
        }
        .form-actions {
            margin-top: 2rem;
            padding-top: 1.5rem;
            border-top: 1px solid #dee2e6;
        }

        .is-invalid {
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }
    </style>
    
    {% block stylesheets %}{% endblock %}
</head>

<body>
    {% include 'partials/navbar.html.twig' %}

    {% block body %}
    <div class="container py-5">
        <div class="quiz-card">
            <h1 class="quiz-title mb-4">
                <i class="fas fa-{{ is_new ? 'plus-circle' : 'edit' }} me-2"></i>
                {{ is_new ? 'Create New' : 'Edit' }} Quiz
            </h1>
            
            {{ form_start(form, {'attr': {'class': 'quiz-form', 'novalidate': 'novalidate'}}) }}
            
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-info-circle me-2"></i>Basic Information
                    </h3>
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            {{ form_label(form.title, 'Quiz Title', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.title, {
                                'attr': {
                                    'class': 'form-control' ~ (form.title.vars.errors|length > 0 ? ' is-invalid' : ''),
                                    'placeholder': 'Enter quiz title'
                                }
                            }) }}
                            {% for error in form.title.vars.errors %}
                                <div class="invalid-feedback">
                                    {{ error.message }}
                                </div>
                            {% endfor %}
                        </div>
                        <div class="col-md-12 mb-3">
                            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.description, {
                                'attr': {
                                    'class': 'form-control' ~ (form.description.vars.errors|length > 0 ? ' is-invalid' : ''),
                                    'rows': 3,
                                    'placeholder': 'Enter quiz description'
                                }
                            }) }}
                            {% for error in form.description.vars.errors %}
                                <div class="invalid-feedback">
                                    {{ error.message }}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-cog me-2"></i>Quiz Settings
                    </h3>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.duration, 'Duration (minutes)', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            <div class="input-group">
                                {{ form_widget(form.duration, {
                                    'attr': {
                                        'class': 'form-control' ~ (form.duration.vars.errors|length > 0 ? ' is-invalid' : '')
                                    }
                                }) }}
                                <span class="input-group-text">mins</span>
                            </div>
                            {% for error in form.duration.vars.errors %}
                                <div class="invalid-feedback">
                                    {{ error.message }}
                                </div>
                            {% endfor %}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.totalscore, 'Total Score', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            <div class="input-group">
                                {{ form_widget(form.totalscore, {
                                    'attr': {
                                        'class': 'form-control' ~ (form.totalscore.vars.errors|length > 0 ? ' is-invalid' : '')
                                    }
                                }) }}
                                <span class="input-group-text">points</span>
                            </div>
                            {% for error in form.totalscore.vars.errors %}
                                <div class="invalid-feedback">
                                    {{ error.message }}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-user me-2"></i>Author Information
                    </h3>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.author, 'Author Name', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.author, {
                                'attr': {
                                    'class': 'form-control' ~ (form.author.vars.errors|length > 0 ? ' is-invalid' : ''),
                                    'placeholder': 'Enter author name'
                                }
                            }) }}
                            {% for error in form.author.vars.errors %}
                                <div class="invalid-feedback">
                                    {{ error.message }}
                                </div>
                            {% endfor %}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.creationdate, 'Date', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.creationdate, {
                                'attr': {
                                    'class': 'form-control' ~ (form.creationdate.vars.errors|length > 0 ? ' is-invalid' : '')
                                }
                            }) }}
                            {% for error in form.creationdate.vars.errors %}
                                <div class="invalid-feedback">
                                    {{ error.message }}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                
                <div class="form-actions d-flex justify-content-between">
                    <a href="{{ path('app_quiz_index') }}" class="btn btn-outline-secondary btn-lg">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save me-2"></i>{{ is_new ? 'Create Quiz' : 'Update Quiz' }}
                    </button>
                </div>
                
            {{ form_end(form) }}
        </div>
    </div>
    {% endblock %}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>