<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quiz Index</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
    
    <style>
        h1.mb-4 {
            text-align: center;
            font-size: 2.5rem;
            font-weight: bold;
            color: #2c3e50;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 30px;
            padding: 20px;
            background-color: #f1f1f1;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .search-section {
            margin-bottom: 30px;
            display: flex;
            justify-content: center;
        }

        .search-section .input-group {
          margin-left: 40px;

            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
            width: 80%;
        }

        .search-section .input-group input {
            border: none;
            height: 50px;
        }

        .search-section .input-group button {
            height: 50px;
            border-radius: 0;
        }

        .action-buttons .btn {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
            margin-right: 0.25rem;
        }

        .create-new-btn {
            margin-top: 1.5rem;
        }

        .table-responsive {
            overflow-x: auto;
        }
    </style>
</head>

<body>
    {% include 'partials/navbar.html.twig' %}

    <div class="container py-4">
        <h1 class="mb-4">Quiz Index</h1>

        <div class="search-section d-flex justify-content-between align-items-center mb-4" style="gap: 15px; flex-wrap: wrap;">
        <form method="GET" action="{{ path('app_quiz_index') }}" class="d-flex align-items-center flex-grow-1" style="max-width: 75%;">
            <div class="input-group" style="box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); border-radius: 10px; overflow: hidden;">
                <span class="input-group-text bg-primary text-white" style="border: none; height: 50px; display: flex; align-items: center;">
                    <i class="fas fa-search"></i>
                </span>
                <input type="text" name="search" class="form-control" placeholder="Search quizzes by title..." value="{{ app.request.query.get('search', '') }}" style="border: none; font-size: 1rem; height: 50px; line-height: 1.5;">
                <button type="submit" class="btn btn-primary" style="border-radius: 0; font-size: 1rem; font-weight: bold; height: 50px; display: flex; align-items: center; justify-content: center;">Search</button>
                <a href="{{ path('app_quiz_index') }}" class="btn btn-secondary" style="border-radius: 0; font-size: 1rem; font-weight: bold; height: 50px; display: flex; align-items: center; justify-content: center;">Clear</a>
            </div>
        </form>

        <a href="{{ path('formateur_quizs_stats') }}" class="btn btn-success d-flex align-items-center justify-content-center" style="height: 50px; margin-right:60px; white-space: nowrap; font-size: 1rem; font-weight: bold; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); border-radius: 10px;">
            <i class="fas fa-chart-bar me-2"></i> View Quiz Statistics
        </a>
    </div>
       

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Duration</th>
                        <th>Total Score</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for quiz in quizzes %}
                    <tr>
                        <td>{{ quiz.title }}</td>
                        <td>{{ quiz.description }}</td>
                        <td>{{ quiz.duration }} mins</td>
                        <td>{{ quiz.totalscore }} pts</td>
                        <td>{{ quiz.creationdate ? quiz.creationdate|date('Y-m-d H:i') : '' }}</td>
                        <td class="action-buttons">
                            <a href="{{ path('app_quiz_show', {'quiz_id': quiz.quiz_id}) }}" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> Show
                            </a>
                            <a href="{{ path('app_quiz_edit', {'quiz_id': quiz.quiz_id}) }}" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <form method="post" action="{{ path('app_quiz_delete', {'quiz_id': quiz.quiz_id}) }}" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ quiz.quiz_id) }}">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this quiz?')">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center">No quizzes found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <a href="{{ path('app_quiz_new') }}" class="btn btn-success create-new-btn">
            <i class="fas fa-plus"></i> Create New Quiz
        </a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>