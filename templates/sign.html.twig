

{% block title %}Sign Language Generator{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">üßè Sign Language Generator</h1>

    {# Error display #}
    {% if error %}
        <div class="alert alert-danger mb-4">
            {{ error }}
            {% if 'not found' in error|lower %}
                <div class="mt-2">
                    <small>Try: Hello, Thank You, Yes, No, A-Z letters</small>
                </div>
            {% endif %}
        </div>
    {% endif %}

    {# Generation form #}
    <form method="POST" class="mb-4">
        <div class="form-group">
            <label class="form-label">Enter a word (e.g. Hello, Yes):</label>
            <input type="text" 
                   name="prompt" 
                   class="form-control form-control-lg" 
                   value="{{ prompt }}" 
                   placeholder="Type a word..."
                   required
                   minlength="1"
                   maxlength="20">
        </div>
        <button type="submit" class="btn btn-primary btn-lg w-100">
            Generate Sign
        </button>
    </form>

    {# Results section #}
    {% if imageUrl %}
        <div class="card mt-4">
            <div class="card-body text-center">
                <h3 class="card-title">ASL for "{{ prompt|capitalize }}"</h3>
                <img src="{{ imageUrl }}" 
                     alt="American Sign Language for {{ prompt }}"
                     class="img-fluid rounded border p-2"
                     style="max-height: 400px;">
                <div class="mt-3">
                    <a href="{{ imageUrl }}" 
                       download="asl_{{ prompt|lower }}.jpg"
                       class="btn btn-success">
                       <i class="fas fa-download"></i> Download
                    </a>
                    <small class="d-block mt-2 text-muted">
                        For educational use only
                    </small>
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}